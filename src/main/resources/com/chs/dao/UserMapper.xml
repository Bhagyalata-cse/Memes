<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.chs.dao.UserMapper">
    <select id="getUserByEmail" resultType="com.chs.domain.User">
        SELECT * FROM user WHERE email = #{email}
    </select>

    <insert id="insertUser" parameterType="com.chs.domain.User" useGeneratedKeys="true" keyProperty="id">
        INSERT INTO user (nickname, email, password, profile_picture)
        VALUES (#{nickname}, #{email}, #{password}, #{profile_picture})
    </insert>

    <select id="getUserById" resultType="com.chs.domain.User">
        SELECT * FROM user WHERE id = #{id}
    </select>

    <update id="updateUser" parameterType="com.chs.domain.User">
        UPDATE user
        SET nickname = #{nickname},
            password = #{password},
            profile_picture = #{profile_picture}
        WHERE id = #{Id}
    </update>
</mapper>

